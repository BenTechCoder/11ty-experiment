---
title: my blog
layout: "base.njk"

---
   
    
       
<div class="section container">
<h1 class="section-title">Recent articles</h1>
<ul role = "list" class = "articles_list flow">
{%- for post in collections.post | reverse -%}
<li>
<article class="snippet">
<img src="{{post.data.image}}" alt="{{post.data.title}}" class="snippet_image">
<h3 class="snippet_title">{{ post.data.title }}</h3>
<p class="snippet_meta">by <span>{{post.data.description}}</span></p>
<p class="snippet_body">{{post.data.description}}</p>
<a href="{{post.url}}" class="btn btn--primary">Continue Reading</a>
</article>
</li>
{% endfor %}
</ul>
  </div>
